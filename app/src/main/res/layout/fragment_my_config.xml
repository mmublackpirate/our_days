<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grape_dark"
    tools:context="com.yemyatthu.ourdays.fragment.MyConfigFragment">


    <ImageView android:id="@+id/main_male"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/set_love_text"
        android:src="@drawable/doge"/>
    <ImageView android:id="@+id/main_female"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/set_love_text"
        android:src="@drawable/doge"/>
    <com.cengalabs.flatui.views.FlatEditText
        android:id="@+id/set_love_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:padding="5dp"
        flatui:fl_fieldStyle="fl_transparent"
        flatui:fl_theme="@array/dark"
        android:layout_centerInParent="true"/>
    <com.cengalabs.flatui.views.FlatButton
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:id="@+id/update_text_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Update"
        android:textSize="12sp"
        android:layout_below="@id/set_love_text"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
